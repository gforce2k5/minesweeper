<% include ./partials/header %>
<div class="container">
  <h1>Select Minesweeper Size</h1>
  <form action="/game/" method="GET">
    <div class="form-group">
      <label for="width">Width</label>
      <input class="form-control" type="number" name="width" id="width" min="10", max="200" value="31" step="1" required>
    </div>
    <div class="form-group">
      <label for="height">Height</label>
      <input class="form-control" type="number" name="height" id="height" min="10", max="200" value="16" step="1" requiredot>
    </div>
    <div class="form-group">
      <label for="mines">Mines</label>
      <input class="form-control" type="number" name="mines" id="mines" min="10", max="999" value="99" step="1" requiredot>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary btn-lg">
  </form>
</div>

<% include ./partials/footer %>